{ 
    "manifest_version": 2, 
    "name": "try's First Extension", 
    "version": "1.0", 
    "description": "The first extension that CC made.", 
    "browser_action": { 
        "default_popup": "try.html"
    }, 
    "permissions": [ 
        "http://*/", 
        "bookmarks", 
        "tabs", 
        "history",
        "contextMenus"
    ], 
    "background":{
        "script":["js/background.js"],
        "page":"try.html"
    }, 
     "content_scripts": [{
         "matches":["https://blog.csdn.net/*","http://blog.csdn.net/*","http://www.zhihu.com/*","https://www.zhihu.com/*","http://zhuanlan.zhihu.com/*","https://zhuanlan.zhihu.com/*","https://juejin.im/*","https://juejin.cn/*"],  
         "js": [ "js/js.js"],   
         "run_at": "document_start"
    }] ,
    "commands": {
        "_execute_browser_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+F",
            "mac": "MacCtrl+Shift+F"
          },
          "description": "Opens try.html"
        }
      }
}